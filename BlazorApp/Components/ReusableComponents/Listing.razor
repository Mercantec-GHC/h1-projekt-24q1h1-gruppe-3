@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

@if (ShowAsCards)
{
    <div class="card-container">
        @foreach (var game in Games)
        {
            <div class="card" style="cursor: pointer;" @onclick="() => NavigateToProduct(game.itemID - 1)">
                <div class="card-image-container">
                    <img src="/Picture/skyrim.png" class="img-fluid card-game-image" alt="Game Image">
                </div>
                <button @onclick="() => HandleClick(game)">
                    <img class="card-favoriteStar" src="data:image/png;base64,">
                </button>
                <p class="card-game-title">@game.gameName</p>
                <p class="card-game-price text-right"><b>@game.price €</b></p>
                <p class="card-game-condition"><b>Condition:</b> @game.condition</p>
                <p class="card-game-description">@game.description</p>

                <p class="card-game-created"><b>Created:</b> @game.created</p>
                <p class="card-game-genre"><b>Genre:</b> @game.genre</p>
                <p class="card-game-manufacture"><b>Manufacture:</b> @game.manufacture</p>
                
            </div>
        }
    </div>
}
else
{
    @foreach (var game in Games)
    {
        <div class="row" style="margin-bottom: 0.2rem; cursor: pointer;" @onclick="() => NavigateToProduct(game.itemID - 1)">
            <div class="col-1">
                <div class="image-container">
                    <img src="/Picture/skyrim.png" class="img-fluid game-image" alt="Game Image">
                </div>
                <button @onclick="() => HandleClick(game)">
                    <img class="favoriteStar" src="data:image/png;base64,">
                </button>
            </div>
            <div class="col-8">
                <p class="game-title">@game.gameName</p>
                <p class="game-created"><b>Created:</b> @game.created</p>
                <p class="game-genre"><b>Genre:</b> @game.genre</p>
                <p class="game-manufacture"><b>Manufacture:</b> @game.manufacture</p>
                <p class="game-description">@game.description</p>
            </div>
            <div class="col-2">
                <p class="game-price text-right">Price: <b>@game.price €</b></p>
                <p class="game-condition"><b>Condition:</b> @game.condition</p>
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public List<Item> Games { get; set; }

    [Parameter]
    public EventCallback<Item> OnAddToFavorites { get; set; }

    [Parameter]
    public bool ShowAsCards { get; set; }

    private async Task HandleClick(Item game)
    {
        await OnAddToFavorites.InvokeAsync(game);
    }

    private void NavigateToProduct(int itemId)
    {
        NavigationManager.NavigateTo($"./product/{itemId}");
    }
}
