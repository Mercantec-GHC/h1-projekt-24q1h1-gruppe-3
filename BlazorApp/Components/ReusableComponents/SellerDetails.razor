

<div class="sellerDetailsContainer">
    <h5 class="sellerDetails"><b>Seller Details:</b></h5>
    @foreach (var sellerDetail in sellerDetails)
    {
        if (!ShowOnlyLocation)
        {
            <p class="name"><b>Name: </b>@sellerDetail.name</p>
            <p class="tel"><b>Phone Number: </b>@sellerDetail.phoneNumber</p>
            <p class="mail"><b>Email: </b>@sellerDetail.email</p>

        }

    }
</div>


@code {
    [Parameter]
    public int userID { get; set; }

    [Parameter]
    public bool ShowOnlyLocation { get; set; } = false;

    public List<User> sellerDetails = new List<User>();

    protected override void OnInitialized()
    {
        sellerDetails = DB.GetSellerDetailsFromUsers(userID);
    }

    // [Parameter]
    // public bool IsPopupVisible { get; set; }



}
